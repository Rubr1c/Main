#include <iostream>
#include <string>
using namespace std;

int main() {
    int n;
    cin >> n;

    for (int i = 0; i < n; i += 2) {
            // Inner loop for spaces
            for (int j = 0; j < (n - i) / 2; j++) {
                cout << " ";
            }
            // Inner loop for stars
            for (int k = 0; k < i + 1; k++) {
                cout << "*";
            }
            cout << endl;
        }



    return 0;
}
